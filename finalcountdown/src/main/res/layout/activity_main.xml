<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/transparent"
    android:baselineAligned="false">
    <com.mfatihk.finalcountdown.CircularTimer
        android:id="@+id/timer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.mfatihk.finalcountdown.FlatTimer
        android:id="@+id/flatTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:timerTextColor="@color/white"
        app:countdownTextColor="@color/white"
        app:countdownFieldBgColor="@color/countdown_flat_bg"
        app:countdownFieldStrokeColor="@color/countdown_flat_stroke"
        app:layout_constraintTop_toBottomOf="@id/timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>